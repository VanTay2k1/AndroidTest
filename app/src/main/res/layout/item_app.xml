<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1DFDF"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgAppIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvNameApp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/imgAppIcon"
        app:layout_constraintLeft_toRightOf="@id/imgAppIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgAppIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>